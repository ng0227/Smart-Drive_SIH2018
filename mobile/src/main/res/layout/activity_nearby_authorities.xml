<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techhive.smartdrive.Activities.NearbyAuthoritiesActivity">

    <Button
        android:id="@+id/police_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Police" />

    <Button
        android:id="@+id/hospital_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/police_bt"
        android:text="Hospital" />

    <Button
        android:id="@+id/fire_station_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hospital_bt"
        android:text="Fire" />

</RelativeLayout>
