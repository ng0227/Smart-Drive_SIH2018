<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.techhive.smartdrive.Activities.ProfileActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileactivity_profileImage"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:padding="20dp"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/profileactivity_fullName"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="GUEST"
        android:padding="20dp"
        android:textSize="25sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <TextView
        android:id="@+id/profileactivity_email"
        android:textColor="@color/White"
        android:textSize="25sp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in for more features" />
    <TextView
        android:id="@+id/profileactivity_number"
        android:textColor="@color/White"
        android:textSize="25sp"
        android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in for more features" />

</LinearLayout>
